<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTheme x:Key="BorderBlockInformationTheme" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ControlStrokeColorSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
    </ControlTheme>
</ResourceDictionary>
