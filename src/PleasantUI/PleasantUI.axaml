<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource BackgroundColor}" />
        <SolidColorBrush x:Key="BackgroundControlBrush" Color="{DynamicResource BackgroundControlColor}" />
        <SolidColorBrush x:Key="BackgroundLevel1Brush" Color="{DynamicResource BackgroundLevel1Color}" />
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{DynamicResource HoverBackgroundColor}" />
        <SolidColorBrush x:Key="WindowBorderBrush" Color="{DynamicResource WindowBorderColor}" />
        <SolidColorBrush x:Key="SelectionBrush" Color="{DynamicResource SelectionColor}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource BorderColor}" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="{DynamicResource ForegroundColor}" />
        <SolidColorBrush x:Key="ForegroundOpacityBrush" Color="{DynamicResource ForegroundOpacityColor}" />
        <SolidColorBrush x:Key="PressedForegroundBrush" Color="{DynamicResource PressedForegroundColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{DynamicResource AccentColor}" />
        <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource ErrorColor}" />
        
        <SolidColorBrush x:Key="TitleBarBrush" Color="{DynamicResource TitleBarColor}" />
        <SolidColorBrush x:Key="TitleBarFullscreenBrush" Color="{DynamicResource TitleBarFullscreenColor}" />
        <SolidColorBrush x:Key="CloseButtonBrush" Color="{DynamicResource CloseButtonColor}" />
        
        <SolidColorBrush x:Key="HoverScrollBoxBrush" Color="{DynamicResource HoverScrollBoxColor}"/>
        <SolidColorBrush x:Key="ScrollBoxBrush" Color="{DynamicResource ScrollBoxColor}"/>

        <!-- MessageBox -->
        <SolidColorBrush x:Key="MBDefaultButtonBackgroundBrush" Color="{DynamicResource MBDefaultButtonBackgroundColor}" />
        <SolidColorBrush x:Key="MBDefaultButtonForegroundBrush" Color="{DynamicResource MBDefaultButtonForegroundColor}" />
        <SolidColorBrush x:Key="MBDefaultButtonHoverBackgroundBrush" Color="{DynamicResource MBDefaultButtonHoverBackgroundColor}" />

        <SolidColorBrush x:Key="MBQuestionBrush" Color="{DynamicResource MBQuestionColor}" />
        <SolidColorBrush x:Key="MBSuccessBrush" Color="{DynamicResource MBSuccessColor}" />
        <SolidColorBrush x:Key="MBWarningBrush" Color="{DynamicResource MBWarningColor}" />
        <SolidColorBrush x:Key="MBErrorBrush" Color="{DynamicResource MBErrorColor}" />
        <!-- MessageBox -->
    </Styles.Resources>
    
