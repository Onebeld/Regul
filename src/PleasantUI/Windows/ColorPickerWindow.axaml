<ContentDialog xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             MinWidth="350"
             Width="350"
             Height="490"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="590"
             x:Class="PleasantUI.Windows.ColorPickerWindow">
    <ColorView x:Name="ColorView" />
    
    <ContentDialog.BottomPanelContent>
        <UniformGrid Margin="15 0" Rows="0" Columns="2">
            <Button x:Name="OkButton" 
                    Theme="{StaticResource AccentButtonTheme}"
                    Content="OK" 
                    FontWeight="SemiBold"  
                    VerticalAlignment="Center" 
                    Margin="5" />
                        
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    VerticalAlignment="Center" 
                    Margin="5" />
        </UniformGrid>
    </ContentDialog.BottomPanelContent>
</ContentDialog>
