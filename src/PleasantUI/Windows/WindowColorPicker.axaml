<PleasantDialogWindow xmlns="https://github.com/avaloniaui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      x:Class="PleasantUI.Windows.WindowColorPicker"
					  MinWidth="400" MinHeight="260"
                      Title="{DynamicResource ChooseColor}">
    <Grid RowDefinitions="*,40">
        <ColorPicker x:Name="ColorPicker"/>
        
        <Grid Grid.Row="1" Background="{DynamicResource BackgroundLevel1Brush}">
            <StackPanel Name="Buttons" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="5" Margin="8">
                <Button Classes="mbdefault" Name="OK" Content="{DynamicResource OK}" Padding="15 0"/>
                <Button Name="Cancel" Content="{DynamicResource Cancel}" Padding="15 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</PleasantDialogWindow>