<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:AvalonEdit="using:AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Regul.S3PE.Viewers.TextViewer">
    <Grid RowDefinitions="*,30">
        <AvalonEdit:TextEditor Grid.Row="0" 
                               x:Name="PART_AvaloniaEdit" 
                               FontSize="12"
                               BorderThickness="0"
                               IsReadOnly="True"
                               HorizontalScrollBarVisibility="Auto"
                               Background="Transparent"/>
        <Grid Row="1" Background="{StaticResource BackgroundLevel1Brush}">
            <Button x:Name="PART_Edit" Content="Edit" HorizontalAlignment="Right" Padding="15 0" Margin="4" />
        </Grid>
    </Grid>
</UserControl>
