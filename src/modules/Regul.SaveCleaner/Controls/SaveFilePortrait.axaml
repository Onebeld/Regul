<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="200"
             x:Class="Regul.SaveCleaner.Controls.SaveFilePortrait"
			 Width="160" Height="180">
	<Grid RowDefinitions="*,Auto">
		<Border Classes="BorderStyle" Margin="5 5 5 0" CornerRadius="5 5 0 0" BorderThickness="1 1 1 0">
			<Image x:Name="iconFamily" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Border>
		<Border Grid.Row="1" Classes="BorderStyle" Background="{DynamicResource BackgroundLevel1Brush}" CornerRadius="0 0 5 5" Margin="5 0 5 5">
			<StackPanel Spacing="5" Margin="5">
				<TextBox x:Name="saveName" Watermark="Save family" IsReadOnly="False" TextAlignment="Center"/>
				<TextBox x:Name="saveFamily" Watermark="Save family" IsReadOnly="False" TextAlignment="Center"/>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
